<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Surfaces -->
    <style name="StorageHelper.Toolbar" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="elevation">6dp</item>
    </style>

    <style name="StorageHelper.BottomSheet" parent="@style/Widget.MaterialComponents.BottomSheet">
        <item name="backgroundTint">@color/grayLight</item>
        <item name="behavior_hideable">false</item>
        <item name="behavior_peekHeight">30dp</item>
        <item name="elevation">6dp</item>
    </style>

    <style name="StorageHelper.BottomBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="elevation">6dp</item>
        <item name="itemIconSize">26dp</item>
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="itemTextColor">@color/black</item>
        <item name="itemIconTint">@color/black</item>
    </style>

    <style name="StorageHelper.CardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="StorageHelper.DropdownList" parent="android:Widget.Holo.ListView.DropDown">
        <item name="android:dividerHeight">0.7dp</item>
    </style>

    <!-- Buttons -->
    <style name="StorageHelper.Button.TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StorageHelper.Button.TextButton.Colored.PrimaryColor" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="StorageHelper.Button.TextButton.Colored.SecondaryColor" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/secondaryDarkColor</item>
    </style>

    <style name="StorageHelper.Button.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/button_ripple_effect</item>
    </style>

    <style name="StorageHelper.Button.ToggleButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StorageHelper.Button.ToggleButton.Colored.PrimaryColor" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="StorageHelper.Button.ToggleButton.Colored.SecondaryColor" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/secondaryDarkColor</item>
    </style>

    <!-- Text views -->
    <style name="StorageHelper.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="maxLines">1</item>
    </style>

    <style name="StorageHelper.TextView.Names" parent="StorageHelper.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:maxLength">18</item>
    </style>

    <style name="StorageHelper.TextView.Hints" parent="StorageHelper.TextView">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="StorageHelper.TextView.Titles" parent="StorageHelper.TextView">
        <item name="android:textSize">26sp</item>
        <item name="android:maxLength">18</item>
    </style>

    <style name="StorageHelper.TextView.Numbers" parent="StorageHelper.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:maxLength">9</item>
    </style>

    <style name="StorageHelper.EditText" parent="Widget.AppCompat.EditText">
        <item name="maxLines">1</item>
    </style>

    <style name="StorageHelper.EditText.Symbolic" parent="StorageHelper.EditText">
        <item name="android:inputType">textCapSentences</item>
        <item name="android:maxLength">18</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="StorageHelper.EditText.Numeric" parent="StorageHelper.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLength">9</item>
        <item name="android:inputType">number</item>
        <item name="android:digits">0123456789</item>
    </style>

    <!-- Widgets -->
    <style name="StorageHelper.Spinner" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:popupBackground">@color/grayLight</item>
    </style>
</resources>