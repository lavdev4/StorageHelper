<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/adapter_entry_editor_items_list_item_name"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/adapter_entry_editor_items_list_delete_item_button"
            style="@style/StorageHelper.TextView.Titles"/>

        <ImageButton
            android:id="@+id/adapter_entry_editor_items_list_delete_item_button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/icon_adapters_button_delete_item"
            android:background="?attr/selectableItemBackground"
            android:visibility="gone"
            android:contentDescription="@null"
            app:layout_constraintTop_toTopOf="@id/adapter_entry_editor_items_list_item_name"
            app:layout_constraintLeft_toRightOf="@id/adapter_entry_editor_items_list_item_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/adapter_entry_editor_items_list_item_name"
            style="@style/StorageHelper.Button.ImageButton"/>

        <EditText
            android:id="@+id/adapter_entry_editor_items_list_item_quantity"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:importantForAutofill="no"
            app:layout_constraintTop_toBottomOf="@id/adapter_entry_editor_items_list_item_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/adapter_entry_editor_items_list_decrement_button"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/StorageHelper.EditText.Numeric"
            tools:ignore="LabelFor"/>

        <ImageButton
            android:id="@+id/adapter_entry_editor_items_list_decrement_button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@null"
            android:src="@drawable/icon_adapters_button_decrement"
            app:layout_constraintTop_toTopOf="@id/adapter_entry_editor_items_list_item_quantity"
            app:layout_constraintLeft_toRightOf="@id/adapter_entry_editor_items_list_item_quantity"
            app:layout_constraintRight_toLeftOf="@id/adapter_entry_editor_items_list_increment_button"
            app:layout_constraintBottom_toBottomOf="@id/adapter_entry_editor_items_list_item_quantity"
            style="@style/StorageHelper.Button.ImageButton"/>

        <ImageButton
            android:id="@+id/adapter_entry_editor_items_list_increment_button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:contentDescription="@null"
            android:src="@drawable/icon_adapters_button_increment"
            app:layout_constraintTop_toTopOf="@id/adapter_entry_editor_items_list_item_quantity"
            app:layout_constraintLeft_toRightOf="@id/adapter_entry_editor_items_list_decrement_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/adapter_entry_editor_items_list_item_quantity"
            style="@style/StorageHelper.Button.ImageButton"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>